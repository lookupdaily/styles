{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"ignore": ["normalize.css"]
	},
	"linter": {
		"enabled": true,
		"ignore": ["jest.config.js"],
		"rules": {
			"all": true,
			"nursery": {
				"all": false
			},
			"correctness": {
				"noNodejsModules": "off",
				"useImportExtensions": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"javascript": {
		"globals": [
			"it",
			"test",
			"describe",
			"expect",
			"jest",
			"before",
			"beforeAll",
			"beforeEach",
			"after",
			"afterAll",
			"afterEach"
		]
	}
}
