{
  "name": "@lookupdaily/styles",
  "version": "1.0.4",
  "description": "My style library and utilities",
  "main": "dist/index.js",
  "files": [
    "scss/**/*",
    "index.css",
    "index.css.map",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "sass scss/index.scss index.css --style=compressed",
    "build:typescript": "npx tsc",
    "start": "sass scss/index.scss index.css  --watch",
    "lint": "stylelint 'scss/**/*.scss' && npx prettier . --check",
    "lint:fix": "npx stylelint 'scss/**/*.scss' --fix && npx prettier . --write",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
