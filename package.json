    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.13",
    "babel-jest": "^29.7.0",
    "glob": "^11.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "sass-true": "^8.0.0",
    "stylelint": "^16.8.1",
    "stylelint-config-standard-scss": "^13.1.0"
